{
    "compilerOptions": {
        "outDir": "build/main",
        "declaration": true,
        "inlineSourceMap": true,
        //"sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "types" : [
            "node"
          ],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": false,
        "baseUrl": ".", // required for "paths",
        "paths": {
            "frets": [
                "src/index.ts"
            ] // write tests without relative paths
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
      ]
}
